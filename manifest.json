{
  "manifest_version": 3,
  "name": "Stage → Notion",
  "version": "0.1.0",
  "description": "Capture des offres de stage depuis une page web et ajout/mise à jour dans une base Notion.",
  "permissions": [
    "activeTab",
    "alarms",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "declarativeNetRequestWithHostAccess",
    "identity",
    "notifications",
    "sidePanel",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.notion.com/*",
    "https://www.googleapis.com/calendar/*",
    "https://oauth2.googleapis.com/*",
    "https://maps.googleapis.com/*",
    "https://feeds.finance.yahoo.com/*",
    "https://query1.finance.yahoo.com/*",
    "https://data-api.ecb.europa.eu/*",
    "https://api.webstat.banque-france.fr/*",
    "https://webstat.banque-france.fr/*",
    "https://essec.jobteaser.com/*"
  ],
  "oauth2": {
    "client_id": "608348086080-dp8647muci5st4em00pdgvrba75jq3db.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.readonly",
      "https://www.googleapis.com/auth/calendar.events"
    ]
  },
  "action": {
    "default_title": "Stage → Notion",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "side_panel": {
    "default_path": "home.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "512": "icons/icon-512.png"
  }
}
